rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Overview 컬렉션에 대한 읽기 권한 허용
    match /overview/{document} {
      allow read: if true;  // 모든 사용자가 읽기 가능
      allow write: if request.auth != null;  // 인증된 사용자만 쓰기 가능
    }
    
    // Leadership 컬렉션에 대한 권한 설정
    match /leadership/{document} {
      allow read: if true;  // 모든 사용자가 읽기 가능
      allow write: if request.auth != null;  // 인증된 사용자만 쓰기 가능
    }
    
    // 다른 컬렉션들도 필요에 따라 추가
    match /{document=**} {
      allow read: if true;  // 모든 사용자가 읽기 가능
      allow write: if request.auth != null;  // 인증된 사용자만 쓰기 가능
    }
  }
}